<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="demo0312.Zayavka"
        Title="Zayavka">
	<Grid
		RowDefinitions="130,300,*"
		  ColumnDefinitions="280,300,350, 200">
		<StackPanel
			Grid.Row="0"
			Grid.Column="0">
			<Button
				Height="35"
				Content="Выйти"
				Click="vyhod_Click">
			</Button>
			<StackPanel>
			<Border
					Background="LightGray"
					CornerRadius="15">
				<StackPanel
					Height="150">
					<Border
						Height="40"
						VerticalAlignment="Top"
						Background="Orange"
						CornerRadius="15">
						<StackPanel
							VerticalAlignment="Center"
							Height="25"
							Width="400">
							<TextBlock
								Margin="0,3,0,0"
								VerticalAlignment="Center"
								HorizontalAlignment="Center"
								Text="Информация для пропуска">
							</TextBlock>
						</StackPanel>
					</Border>
					<StackPanel
						Grid.Column="0"
						HorizontalAlignment="Left">
						<TextBlock
							Margin="0,7,0,0"
							HorizontalAlignment="Center"
							Text="Срок действия заявки:">
						</TextBlock>
						<StackPanel
							Orientation="Horizontal">
							<TextBlock
								Text="с:">
							</TextBlock>
							<Viewbox
								Width="120">
								<DatePicker
									Name="nachD">
								</DatePicker>
							</Viewbox>
							<TextBlock
								Text=" по:">
							</TextBlock>
							<Viewbox
								Width="120">
								<DatePicker
									Name="endD">
								</DatePicker>
							</Viewbox>
						</StackPanel>
						<TextBlock
							Margin="0,7,0,0"
							HorizontalAlignment="Center"
							Text="Цель посещения">
						</TextBlock>
						<ComboBox
							Width="200"
							HorizontalAlignment="Center"
							Name="aimCB">
						</ComboBox>
					</StackPanel>
				</StackPanel>
				</Border>
			</StackPanel>
		</StackPanel>
			<StackPanel
				Margin="0,70,0,0"
				Height="200"
				Grid.Row="0"
				Grid.Column="1">
				<Border
					CornerRadius="15"
					Background="LightGray">
					<StackPanel
						Height="150">
				<Border
					Background="Orange"
					Grid.Column="1"
					CornerRadius="15">
				<StackPanel
					Grid.Column="1"
					Height="40">
					<TextBlock
						Margin="0,12,0,0"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Text="Принимающая сторона">
					</TextBlock>
					</StackPanel>
				</Border>
						<TextBlock
							Text="Подразделение*:">
						</TextBlock>
				<ComboBox
					SelectionChanged="ComboBox_SelectionChanged"
					Width="250"
					Name="podrCB">
				</ComboBox>
				<TextBlock
					Text="ФИО:">
				</TextBlock>
					<ComboBox
					Width="250"
					Name="sotrCB">
					</ComboBox>
			</StackPanel>
				</Border>
				<StackPanel
					Width="800"
					Background="LightGray"
					Grid.ColumnSpan="2"
					Grid.Column="0">
				<Border
					CornerRadius="25">
					<StackPanel
						Grid.Column="0"
						Grid.ColumnSpan="2"
						Name="infPos">
					<Border
						CornerRadius="25"
						Height="40"
						Background="Orange">
				<StackPanel>
			<TextBlock
				HorizontalAlignment="Center"
				Margin="10"
				Text="Информация о посетителе">
			</TextBlock>
				</StackPanel>
				</Border>
						<StackPanel
							Orientation="Horizontal">
							<StackPanel
								Width="300">
								<StackPanel
									Orientation="Horizontal">
								<TextBlock
									VerticalAlignment="Center"
								Text="Фамилия">
								</TextBlock>
								<TextBox
									Margin="10,0,0,0"
									Width="220"
									Name="surn">
								</TextBox>
									</StackPanel>
								<StackPanel
									Orientation="Horizontal">
								<TextBlock
								   Text="Имя">
								</TextBlock>
									<TextBox
										Margin="42,0,0,0"
										Width="220"
									Name="name">
								</TextBox>
									</StackPanel>
								<StackPanel
									Orientation="Horizontal">
								<TextBlock
									Width="72"
								   Text="Отчество">
								</TextBlock>
									<TextBox
										Width="220"
									Name="otch">
								</TextBox>
									</StackPanel>
								<StackPanel
									Orientation="Horizontal">
									<TextBlock
										Width="72"
									 Text="Телефон">
								</TextBlock>
								<MaskedTextBox
									Width="220"
									Name="phoneMask"
									Mask="+7(000)000-00-00">
								</MaskedTextBox>
								</StackPanel>
								<StackPanel
									Orientation="Horizontal">
									<TextBlock
										Width="72"
									Text="E-mail">
								</TextBlock>
									<TextBox
										Width="220"
									Name="mailUs">
								</TextBox>
									</StackPanel>
							</StackPanel>
							<StackPanel
								Width="300">
								<StackPanel
									Orientation="Horizontal">
								<TextBlock
									Width="90"
									VerticalAlignment="Center"
								Text="Организация">
								</TextBlock>
								<TextBox
									Margin="10,0,0,0"
								HorizontalAlignment="Left"
								Width="200"
								Name="orgInp">
								</TextBox>
									</StackPanel>
								<StackPanel
									Orientation="Horizontal">
									<TextBlock
										VerticalAlignment="Center"
										Width="100"
								Text="Примечание">
								</TextBlock>
								<TextBox
									HorizontalAlignment="Left"
									Width="200"
									Name="primechanieInp">
								</TextBox>
									</StackPanel>
								<StackPanel Orientation="Horizontal">
								<TextBlock
									TextWrapping="Wrap"
									Width="100"
									Text="Дата рождения">
								</TextBlock>
									<Viewbox
									Width="200">
								<DatePicker
									Name="birthDP">
								</DatePicker>
										</Viewbox>
								</StackPanel>
								<StackPanel
									Orientation="Horizontal">
									<TextBlock
										Width="100"
								Text="Серия">
									</TextBlock>
									<MaskedTextBox
										Width="200"
									Name="seriaMask"
									Mask="0000">
									</MaskedTextBox>
								</StackPanel>
								<StackPanel
										Orientation="Horizontal">
									<TextBlock
										Width="100"
										Text="Номер">
									</TextBlock>
									<MaskedTextBox
										Width="200"
									Name="nomerMask"
									Mask="000000">
									</MaskedTextBox>
								</StackPanel>
								</StackPanel>
									<StackPanel
										Width="200">
										<Image
											Height="150"
											Width="150"
											Name="img">
											</Image>
										<Border
											Width="150"
											Background="Orange">
										<Button
											Background="White"
											HorizontalAlignment="Center"
											Width="150"
											Click="img_Click"
											Content="Загрузить фото">
											</Button>
											</Border>
										</StackPanel>
			</StackPanel>
				</StackPanel>
			</Border>
			<Button
				Content="Добавить посетителя">
			</Button>
		</StackPanel>
				
		

			<StackPanel
				HorizontalAlignment="Left"
				Width="300"
				Grid.Row="2"
				Grid.Column="0">
				<Border
						Background="LightGray"
						CornerRadius="15">
					<StackPanel
						Height="60">
						<Border
							Height="40"
							VerticalAlignment="Top"
							Background="Orange"
							CornerRadius="15">
							<StackPanel
								VerticalAlignment="Center"
								Height="25"
								Width="400">
								<TextBlock
									Margin="0,3,0,0"
									VerticalAlignment="Center"
									HorizontalAlignment="Center"
									Text="Прикрепляемые документы">
								</TextBlock>
							</StackPanel>
						</Border>
						<StackPanel
							Grid.Column="0"
							HorizontalAlignment="Left">
							<Button
								Click="AddFile_Click"
								Content="Прикрепить файл">
							</Button>
							</StackPanel>
						</StackPanel>
					</Border>
				</StackPanel>
			
			
			<Button
				Click="Ok_Click"
				Content="Оформить заявку">
			</Button>
		</StackPanel>
	</Grid>
</Window>
