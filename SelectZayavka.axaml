<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="demo0312.SelectZayavka"
        Title="SelectZayavka">
  <Grid
	  ColumnDefinitions="*,200,10,200,*"
	  RowDefinitions="*,200,*">
	  <StackPanel
		  Orientation="Horizontal"
		  Grid.Column="1"
		  Grid.Row="1">
		  <Border
			
			  Height="200"
			  Width="200">
			  <Button
				  CornerRadius="100"
					Margin="10,10,10,10"
					Height="190"
					Width="190"
					Click="lich_Click">
					<Image
						Height="190"
						Width="190"
						Name="lich">
					</Image>
					</Button>
			  </Border>
	  </StackPanel>
	  <StackPanel
		  Grid.Row="1"
		  Grid.Column="3">
		  <Button
					Height="200"
					Width="200"
					Click="group_Click">
			  <Image
				  Height="200"
				  Width="200"
				  Name="group">
			  </Image>
		  </Button>
	  </StackPanel>
	  </Grid>
</Window>
